                                    }
                                    else
                                    {

                                        for (var i = 0; i < Model.Ques.Count; i++)
                                        {
                                            <h6>@Model.Ques[i].QuestionString </h6>
                                            <img src="@Url.Action("PieChart",new {qid = Model.Ques[i].QuestionID})" alt="SimpleChart" />
                                            <br />
                                        }

                                    }

                                </div>


                            </div>
                        </div>
