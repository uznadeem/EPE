@model FYP.ViewModel.FormResultViewModel
@{
    ViewBag.Title = "FormResult";
}

<div class="compny-profile">

    <!-- Profile Company Content -->
    <div class="profile-company-content" data-bg-color="fff">
        <div class="container">
            
            
            
            <h2>Form Results</h2>
            

            <a class="btn btn-primary" style="float: right" href="/admin/ViewDetails/@Model.comid/">Back to community<i class="fa fa-arrow-left"></i></a>

            <div class="row">

                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#ColmChart">Column Chart</a></li>
                        <li><a data-toggle="tab" href="#pieChart">Pie Chart</a></li>
                        <li><a data-toggle="tab" href="#lineChart">Line Chart</a></li>
                        <li><a data-toggle="tab" href="#barChart">Bar Chart</a></li>
                        <li><a data-toggle="tab" href="#AreaChart">Area Chart</a></li>
                    </ul>

                    <div class="tab-content">
                        <div id="ColmChart" class="tab-pane fade in active">
                            <div class="net-work-in">

                                <div class="container">

                                    @if (Model.Ques.Count == 0)
                                    {
                                        <h6>Form is Empty Click Here to add Question @Html.ActionLink("AddQuestion", "AddQuestion", new { controller = "Admin", c_id = Model.comid, qf_id = Model.qf_id, ft = Model.ft }) </h6>

                                    }
                                    else
                                    {

                                        for (var i = 0; i < Model.Ques.Count; i++)
                                        {
                                            <h6>@Model.Ques[i].QuestionString </h6>
                                            <img src="@Url.Action("ResultChart",new {qid = Model.Ques[i].QuestionID})" alt="SimpleChart" />
                                            <br />
                                        }

                                    }

                                </div>
                            
                            
                            </div>
                       </div>

                        <div id="pieChart" class="tab-pane fade">
                            <div class="net-work-in">

