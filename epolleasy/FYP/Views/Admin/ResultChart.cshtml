@model FYP.ViewModel.QuestionAndAnswerViewModel

@{
    ViewBag.Title = "ResultChart";
    Layout = "~/Views/Shared/_LayoutProject.cshtml";
}

<h2>ResultChart</h2>


<table class="container">


        <thead>

            <tr>
                <th>Chart Number</th>
                <th>Chart</th>

            </tr>
        </thead>

        <tbody>

                @for (int i = 0; i < Model.Quest.Count(); i++)
                {
                    <tr>
                        <td>1</td>
                        <td>
                            @{ 
                                var group = Model.Quest[i].Answer;
                                new Chart(width: 400, height: 200).AddSeries(

                                chartType: "column",
                                xValue: group, xField: "AnswerStatement",
                                yValues: group, yFields: "AnsCount").Write("png");
                            }
                        </td>
                    </tr>

                }
       </tbody>
 </table>