@model FYP.Models.QForm
@{
    ViewBag.Title = "AddForm";
    Layout = "~/Views/Shared/_LayoutProject.cshtml";
}
<a class="btn btn-primary" href="/admin/ViewDetails/@ViewBag.id/">Back</a>

<h2>AddForm</h2>
<p>@ViewBag.Messge</p>


@using (Html.BeginForm("AddForm", "admin", new { c_id = ViewBag.id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Form Title</label>
        @Html.TextBoxFor(a => a.FormTitle, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.FormTitle)
    </div>
    <div class="form-group">
        <label>Form Detail</label>
        @Html.TextBoxFor(a => a.FormDetail, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.FormDetail)
    </div>
    <div class="form-group">
        
        <div class="row">

            <div class="col-md-2">
                <label>Select Form Type *</label>
            </div>
            <div class="col-md-4">
                @Html.DropDownList("ft", new List<SelectListItem>
                {
                    new SelectListItem{ Text="Poll ", Value = "1" },
                    new SelectListItem{ Text="Frequency", Value = "2" },
                })
            </div>
        </div>
        
    </div>
        <div class="form-control ">
            @Html.LabelFor(m => m.Expiry_Time, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Expiry_Time, "{0:MM/dd/yyyy HH:mm:ss}", new { @class = "form-control", type = "datetime-local" })
            </div>
        </div>

        <button class="btn btn-primary" type="submit">Create</button>

}
