@model FYP.ViewModel.HomePageViewModel

@{

    Layout = "~/Views/Shared/_LayoutProject.cshtml";
}

    <div id="main-wrapper">


        <!-- HOME PRO-->
        <div class="home-pro">

            <!-- PRO BANNER HEAD -->
            <div class="banr-head">
                <div class="container">
                    <div class="row">

                        <!-- CONTENT -->
                        <div class="col-sm-7">
                            
                        </div>

                        <!-- FORM SECTION -->
                        <div class="col-sm-5">
                            <div class="login-sec">

                                <!-- TABS -->
                                <div class="uou-tabs">
                                    <ul class="tabs">
                                        <li><a href="#register">Register Now</a></li>
                                        <li class="active"><a href="#log-in">Member Login</a></li>
                                    </ul>

                                    <!-- REGISTER -->
                                    <div class="content">
                                        <div id="register">
                                            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <hr />
                                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                                    <div class="form-group">
                                                        @Html.LabelFor(m => m.Reg.FirstName, new { @class = "col-md-2 control-label" })
                                                        <div class="col-md-4">
                                                            @Html.TextBoxFor(m => m.Reg.FirstName, new { @class = "form-control" })
                                                        </div>
                                                        @Html.LabelFor(m => m.Reg.LastName, new { @class = "col-md-2 control-label" })
                                                        <div class="col-md-4">
                                                            @Html.TextBoxFor(m => m.Reg.LastName, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        @Html.LabelFor(m => m.Reg.UserName, new { @class = "col-md-2 control-label" })
                                                        <div class="col-md-10">
                                                            @Html.TextBoxFor(m => m.Reg.UserName, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        @Html.LabelFor(m => m.Reg.Email, new { @class = "col-md-2 control-label" })
                                                        <div class="col-md-10">
                                                            @Html.TextBoxFor(m => m.Reg.Email, new { @class = "form-control" })
                                                        </div>
                                                    </div>



                                                    <div class="form-group">
                                                        @Html.LabelFor(m => m.Reg.Gender, new { @class = "col-md-2 control-label" })
                                                        <div class="col-md-10">
                                                            @Html.RadioButtonFor(m => m.Reg.Gender, "Male", new { @class = "radio-inline" })@Html.Label("Male")
                                                            @Html.RadioButtonFor(m => m.Reg.Gender, "Female", new { @class = "radio-inline" })@Html.Label("Female")
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        @Html.LabelFor(m => m.Reg.Password, new { @class = "col-md-2 control-label" })
                                                        <div class="col-md-10">
                                                            @Html.PasswordFor(m => m.Reg.Password, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        @Html.LabelFor(m => m.Reg.ConfirmPassword, new { @class = "col-md-2 control-label" })
                                                        <div class="col-md-10">
                                                            @Html.PasswordFor(m => m.Reg.ConfirmPassword, new { @class = "form-control" })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        @Html.LabelFor(m => m.Reg.DOB, new { @class = "col-md-2 control-label" })
                                                        <div class="col-md-10">
                                                            @Html.TextBoxFor(m => m.Reg.DOB, new { @class = "form-control date", type = "date" })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        @Html.Label("user Role", new { @class = "col-md-2 control-label" })
                                                        <div class="col-md-10">
                                                            @Html.RadioButtonFor(m => m.Reg.UserRole, "Admin", false)@Html.Label("Admin")
                                                            @Html.RadioButtonFor(m => m.Reg.UserRole, "Participant", false)@Html.Label("Participant")
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="col-md-offset-2 col-md-10">
                                                            <input type="submit" class="btn btn-default" value="Register" />
                                                        </div>
                                                    </div>
                                            }
                                        </div>

                                        <!-- LOGIN -->
                                        <div id="log-in" class="active">
                                            @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                <div class="form-group">
                                                    @Html.LabelFor(u => u.Log.Email, new { @class = "col-md-4 control-label" })
                                                    <div class="col-sm-6">
                                                        @Html.TextBoxFor(u => u.Log.Email, new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(u => u.Log.Email, "", new { @class = "text-danger" })
                                                    </div>

                                                </div>

                                                <div class="form-group">
                                                    @Html.LabelFor(u => u.Log.Password, new { @class = "col-md-4 control-label" })
                                                    <div class="col-sm-6">
                                                        @Html.PasswordFor(u => u.Log.Password, new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(u => u.Log.Password, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                    <div class="form-group">
                                                        <div class="col-md-offset-5 col-md-5">
                                                            <input type="submit" value="Log in" class="btn btn-default" />
                                                            @Html.ActionLink("Forgot Your Password?", "ForgotPassword")


                                                        </div>

                                                        @*<div class="col-md-3">
                                                            @Html.ActionLink("Forgot?", "ForgotPassword")
                                                        </div>*@
                                                    </div>
                                                    

                                            }
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            
            
            </div>
        </div>
     </div>


@Scripts.Render("~/bundles/bootstrap")